{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "type": "module",
  "scripts": {
    "lint": "echo 'Linting temporarily disabled'",
    "serve": "cross-env LOCAL_DEV=true firebase emulators:start --only functions",
    "shell": "cross-env LOCAL_DEV=true firebase functions:shell",
    "start": "cross-env LOCAL_DEV=true npm run shell",
    "dev": "cross-env LOCAL_DEV=true node server/server.mjs",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.mjs",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.8.0",
    "openai": "^4.28.4",
    "plaid": "^21.0.0"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
